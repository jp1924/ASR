    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python 디버거: 현재 파일",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Wav2Vec2 FineTune-Single",
            "type": "debugpy",
            "request": "launch",
            "program": "/root/wav2vec2_pretrain.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICE": "0",
                "TORCHDYNAMO_DISABLE": "1",
                "WANDB_DISABLED": "true",
                "HF_DATASETS_CACHE": "/root/.cache",
            },
            "args": []
        },
        {
            "name": "Wav2Vec2 FineTune-DDP",
            "type": "debugpy",
            "request": "launch",
            "module": "torch.distributed.launch",
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICE": "0,1,2,3",
                "TORCHDYNAMO_DISABLE": "1",
                "NCCL_P2P_DISABLE": "1",
                "NCCL_IB_DISABLE": "1",
                "WANDB_DISABLED": "true",
                "OMP_NUM_THREADS": "4",
                "HF_DATASETS_CACHE": "/root/.cache",
            },
            "justMyCode": false,
            "args": []
        },
        {
            "name": "Wav2Vec2 FineTune-DeepSpeed",
            "type": "debugpy",
            "request": "launch",
            "module": "deepspeed.launcher.runner",
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICE": "0,1,2,3",
                "TORCHDYNAMO_DISABLE": "1",
                "NCCL_P2P_DISABLE": "1",
                "NCCL_IB_DISABLE": "1",
                "WANDB_DISABLED": "true",
                "OMP_NUM_THREADS": "4",
                "HF_DATASETS_CACHE": "/root/.cache",
            },
            "justMyCode": false,
            "args": []
        },
        {
            "name": "Wav2Vec2 Pretrain-Single",
            "type": "debugpy",
            "request": "launch",
            "program": "/root/workspace/wav2vec2_pretrain.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "CUDA_VISIBLE_DEVICE": "0",
                "TORCHDYNAMO_DISABLE": "1",
                "WANDB_DISABLED": "true",
                "HF_DATASETS_CACHE": "/root/.cache",
            },
            "args": [
                "--output_dir=/root/output_dir",
                "--run_name=wav2vec2-pretrain-debug",
                "--model_name_or_path=/root/model",
                "--preprocessing_num_workers=4",
                "--overwrite_cache=false",
                "--cache_dir=false",
                "--do_train=true",
                "--do_eval=true",
                "--do_predict=true",
                "--learning_rate=0.0000042",
                "--weight_decay=5e-4",
                "--warmup_ratio=0.08",
                "--weight_decay=0.01",
                "--evaluation_strategy=no",
                "--save_strategy=no",
                "--logging_strategy=steps",
                "--fp16=true",
            ]
        },
        {
            "name": "Wav2Vec2 Pretrain-DDP",
            "type": "debugpy",
            "request": "launch",
            "module": "torch.distributed.launch",
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICE": "0,1,2,3",
                "TORCHDYNAMO_DISABLE": "1",
                "NCCL_P2P_DISABLE": "1",
                "NCCL_IB_DISABLE": "1",
                "WANDB_DISABLED": "true",
                "OMP_NUM_THREADS": "4",
                "HF_DATASETS_CACHE": "/root/.cache",
            },
            "justMyCode": false,
            "args": [
                "--nproc_per_node=4",
                "/root/workspace/wav2vec2_pretrain.py",
                "--output_dir=/root/output_dir",
                "--run_name=wav2vec2-pretrain-debug",
                "--model_name_or_path=/root/model",
                "--preprocessing_num_workers=4",
                "--overwrite_cache=false",
                "--cache_dir=false",
                "--seed=42",
                "--do_train=true",
                "--do_eval=true",
                "--do_predict=true",
                "--learning_rate=0.0000042",
                "--weight_decay=5e-4",
                "--warmup_ratio=0.08",
                "--weight_decay=0.01",
                "--evaluation_strategy=no",
                "--save_strategy=no",
                "--logging_strategy=steps",
                "--fp16=true",
            ]
        },
        {
            "name": "Wav2Vec2 Pretrain-DeepSpeed",
            "type": "debugpy",
            "request": "launch",
            "module": "deepspeed.launcher.runner",
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICE": "0,1,2,3",
                "TORCHDYNAMO_DISABLE": "1",
                "NCCL_P2P_DISABLE": "1",
                "NCCL_IB_DISABLE": "1",
                "WANDB_DISABLED": "true",
                "OMP_NUM_THREADS": "4",
                "HF_DATASETS_CACHE": "/root/.cache",
            },
            "justMyCode": false,
            "args": [
                "--num_gpus=4",
                "/root/workspace/wav2vec2_pretrain.py",
                "--output_dir=/root/output_dir",
                "--run_name=wav2vec2-pretrain-debug",
                "--model_name_or_path=/root/model",
                "--preprocessing_num_workers=4",
                "--overwrite_cache=false",
                "--cache_dir=false",
                "--seed=42",
                "--do_train=true",
                "--do_eval=true",
                "--do_predict=true",
                "--learning_rate=0.0000042",
                "--weight_decay=5e-4",
                "--warmup_ratio=0.08",
                "--weight_decay=0.01",
                "--evaluation_strategy=no",
                "--save_strategy=no",
                "--logging_strategy=steps",
                "--fp16=true",
                "--deepspeed=/root/workspace/ds_config/ZeRO_2.json"
            ]
        }
    ]
}